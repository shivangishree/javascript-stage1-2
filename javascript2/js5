10
function convert(a){ 
    for(var i=0;i<a.length;i++){
        var ch = a[i]; 
        if(ch>=65&&ch<=90){
            a[i]=a[i]+32;
        }
        else if(ch>=97&&ch<=102)
        {
            a[i]=a[i]-32;
        }
    }
    return a;
}



